---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  fetchpriority?: "high" | "low" | "auto" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

// Destructuring Astro.props to get the component's props
let {
  src,
  alt,
  width,
  height,
  loading,
  decoding,
  fetchpriority,
  class: className,
  format,
  style,
} = Astro.props;

// Fix path: convert /src/assets/... to ./src/assets/...
if (src.startsWith("/src/assets/")) {
  src = "." + src;
}

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,svg,webp}",
  { eager: false }
);

// Normalize the src to match glob keys (glob keys start with /src/assets/...)
let globKey = src;
if (globKey.startsWith("./src/assets/")) {
  globKey = globKey.replace("./src/assets/", "/src/assets/");
}

// Check if the source path is valid
const isValidPath = images[globKey] ? true : false;

!isValidPath &&
  console.error(
    `\x1b[31mImage not found - ${src} (globKey: ${globKey}).\x1b[0m Make sure the image is in the /src/assets folder.`,
  );
---

{
  isValidPath && (
    <Image
      src={images[globKey]() as Promise<{ default: ImageMetadata }>}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      fetchpriority={fetchpriority}
      class={className}
      format={format}
      style={style}
    />
  )
}
