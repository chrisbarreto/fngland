---
import reviews from "@/config/reviews.json";

interface Review {
  name: string;
  badge: string;
  date: string;
  rating: number;
  text: string;
}

const typedReviews = reviews as Review[];
---

<div id="resenas" class="reviews-section">
  <div class="reviews-header">
    <div class="google-logo">
      <svg viewBox="0 0 24 24" width="32" height="32">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      <span class="google-text">Rese√±as de nuestros clientes</span>
    </div>
  </div>

  <div class="reviews-track-wrapper">
    <div class="reviews-track">
      {[...typedReviews, ...typedReviews].map((review) => (
        <div class="review-card">
          <div class="review-top">
            <div class="reviewer-avatar">
              {review.name.charAt(0)}
            </div>
            <div class="reviewer-info">
              <span class="reviewer-name">{review.name}</span>
              {review.badge && <span class="reviewer-badge">{review.badge}</span>}
            </div>
          </div>
          <div class="review-stars">
            {[1,2,3,4,5].map(() => (
              <svg viewBox="0 0 24 24" fill="#f92606" width="16" height="16">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
            <span class="review-date">{review.date}</span>
          </div>
          <p class="review-text">{review.text}</p>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .reviews-section {
    padding: 4rem 1.5rem;
    scroll-margin-top: 80px;
  }

  .reviews-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .google-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .google-text {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .rating-summary {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stars-row {
    display: flex;
    gap: 0.25rem;
  }

  .rating-text {
    font-size: 0.95rem;
    color: var(--sl-color-gray-3);
  }

  /* Carousel */
  .reviews-track-wrapper {
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  .reviews-track {
    display: flex;
    gap: 1.5rem;
    animation: scroll-reviews 30s linear infinite;
    width: max-content;
  }

  .reviews-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll-reviews {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Card */
  .review-card {
    flex-shrink: 0;
    width: 360px;
    padding: 1.75rem;
    border-radius: 1rem;
    border: 1px solid color-mix(in srgb, var(--sl-color-white) 8%, transparent);
    background: color-mix(in srgb, var(--sl-color-black) 60%, transparent);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: border-color 0.3s ease;
  }

  .review-card:hover {
    border-color: color-mix(in srgb, #f92606 40%, transparent);
  }

  .review-top {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .reviewer-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f92606, #ff6b3d);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1rem;
    color: #fff;
    flex-shrink: 0;
  }

  .reviewer-info {
    display: flex;
    flex-direction: column;
  }

  .reviewer-name {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--sl-color-white);
  }

  .reviewer-badge {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
  }

  .review-stars {
    display: flex;
    align-items: center;
    gap: 0.15rem;
    margin-bottom: 0.75rem;
  }

  .review-date {
    margin-left: 0.5rem;
    font-size: 0.8rem;
    color: var(--sl-color-gray-4);
  }

  .review-text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .review-card {
      width: 280px;
      padding: 1.25rem;
    }
  }
</style>
